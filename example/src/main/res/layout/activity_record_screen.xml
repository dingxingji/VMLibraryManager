<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vm_theme_background"
    android:fitsSystemWindows="true">

    <include layout="@layout/widget_appbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/vm_margin_large"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <Button
            android:id="@+id/btn_screenshot_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Screenshot"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_screenshot_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Screenshot Stop"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_record_screen_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Record Screen Start"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_record_screen_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Record Screen Stop"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>