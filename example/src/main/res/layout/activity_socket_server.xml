<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vm_theme_background_light"
    android:fitsSystemWindows="true"
    >
    <include layout="@layout/widget_appbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/vm_margin_large"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <TextView
            android:id="@+id/text_server_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Host"
            />
        <TextView
            android:id="@+id/text_server_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Port"
            />
        <TextView
            android:id="@+id/text_server_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Type"
            />

        <TextView
            android:id="@+id/text_server_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Server is running: false"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/btn_start_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Server"
            />

        <Button
            android:id="@+id/btn_stop_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Server"
            />

        <TextView
            android:id="@+id/text_show_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text="Show Receive Message"
            android:textSize="18dp"
            />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>