<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vm_theme_background_light"
    android:fitsSystemWindows="true"
    >
    <include layout="@layout/widget_appbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/vm_margin_large"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <Button
            android:id="@+id/btn_socket_server_tcp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TCP Socket Server"
            />
        <Button
            android:id="@+id/btn_socket_server_udp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UDP Socket Server"
            />
        <Button
            android:id="@+id/btn_socket_tcp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TCP Socket Client"
            />
        <Button
            android:id="@+id/btn_socket_udp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UDP Socket Client"
            />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>